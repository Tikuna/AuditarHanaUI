<mvc:View controllerName=".controller.CreateEntity" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form"
	xmlns:footerbar="sap.ushell.ui.footerbar" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic"
	xmlns:smart="sap.ui.comp.smartfield" xmlns="sap.m">
	<semantic:DetailPage id="page" navButtonPress="onNavBack" title="{viewModel>/viewTitle}" busy="{viewModel>/busy}">
		<semantic:content>
			<f:SimpleForm class="editableForm" columnsL="1" columnsM="1" editable="true" emptySpanL="4" emptySpanM="4" id="newEntitySimpleForm"
				labelSpanL="3" labelSpanM="3" layout="ResponsiveGridLayout" maxContainerCols="2" minWidth="1024"
				title="{= ${viewModel>/mode} === 'edit'? 'Edit ar.com.newtechnologies.auditar.hana.data.services.EmpresaType': 'New ar.com.newtechnologies.auditar.hana.data.services.EmpresaType'}">
				<f:content>
					<Label text="EMPRESAID" required="true"/>
					<Input name="EMPRESAID" id="EMPRESAID_id" valueLiveUpdate="true" liveChange="_validateSaveEnablement"
						enabled="{= ${viewModel>/mode} === 'edit'? false: true}" visible="true"
						value="{ path: 'EMPRESAID', type: 'sap.ui.model.odata.type.String' , constraints:{ nullable:false } }"/>
					<Label text="DESCRIPCION" required="false"/>
					<Input name="DESCRIPCION" id="DESCRIPCION_id" valueLiveUpdate="true" liveChange="_validateSaveEnablement" enabled="true" visible="true"
						value="{ path: 'DESCRIPCION', type: 'sap.ui.model.odata.type.String' , constraints:{ maxLength:100 } }"/>
					<Label text="PAISID.PAISID" required="false"/>
					<Input name="PAISID.PAISID" id="PAISID.PAISID_id" valueLiveUpdate="true" liveChange="_validateSaveEnablement" enabled="true" visible="true"
						value="{ path: 'PAISID.PAISID', type: 'sap.ui.model.odata.type.String' }"/>
				</f:content>
			</f:SimpleForm>
		</semantic:content>
		<semantic:saveAction>
			<semantic:SaveAction id="save" enabled="{viewModel>/enableCreate}" press="onSave"/>
		</semantic:saveAction>
		<semantic:cancelAction>
			<semantic:CancelAction id="cancel" press="onCancel"></semantic:CancelAction>
		</semantic:cancelAction>
	</semantic:DetailPage>
</mvc:View>